<!DOCTYPE html>
<html>
  <head>
    <head>
        <%- include('../partials/head'); %>
    </head>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include('../partials/sidebar_nav'); %>
        <div class="col-sm-10">
            <h1>Genre list:</h1>
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 gy-5">
                    <% genres.forEach(genre => { %>
                        <div class="card">
                            <img class="card-img" src="<%= genre.storage %>">
                            <div class="card-img-overlay">
                                <h2 class="text-white"><%= genre.name %></h2>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
      </div>
    </div>
  </body>
</html>