<!DOCTYPE html>
<html>
  <head>
    <head>
        <%- include('../partials/head'); %>
    </head>
  </head>
  <body>
    <div class="container-fluid vh-100">
      <div class="row h-100">
        <%- include('../partials/sidebar_nav'); %>
        <div class="col-sm-10 p-5">
            <div class="container d-flex align-content-center justify-content-center">
                <div class="card">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="<%= item.storage %>" class="img-fluid rounded-start">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body p-4 d-flex flex-column h-100">
                                <h2 class="card-title"><b><%= item.name %></b>,<span> <%= item.released %></h2>
                                <p class="card-text"><b><%= item.genre.name %></b></p>
                                <p class="card-text"><%= item.description %></p>
                                <p class="card-text">Developer: <%= item.developer %></p>
                                <p class="card-text">Platform: <%= item.platform %></p>
                                <p class="card-text">Condition: <%= item.condition %></p>
                                <p class="card-text">Stock: <%= item.stock %></p>
                                  <div class="container mt-auto">
                                    <div class="row">
                                      <div class="col-auto">
                                        <a href="<%= item._id %>/update">
                                          <button class="btn btn-warning">Update?</button>
                                        </a>
                                      </div>
                                      <div class="col-auto">
                                        <a href="<%= item._id %>/delete">
                                          <button class="btn btn-danger">Delete?</button>
                                        </a>
                                      </div>
                                    </div>
                                  </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      </div>
    </div>
  </body>
</html>