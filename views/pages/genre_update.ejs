<!DOCTYPE html>
<html>
  <head>
        <%- include('../partials/head'); %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include('../partials/sidebar_nav'); %>
        <div class="col-sm-10 p-3">
            <h1>Update genre?</h1>
            <form class="p-2 pe-5" method="POST" action="" enctype="multipart/form-data">
              <div class="form-group">
                <label class="form-label" for="name">Name of genre:</label>
                <input class="form-control" type="text" placeholder="Genre name" name="name" value="<%- genre.name %>" readonly required>
              </div>
              <div class="form-group">
                <label class="form-label" for="description">Description:</label>
                <input class="form-control" type="text" placeholder="Genre description" name="description" value="<%- genre.description %>" required>
              </div>
              <div class="form-group">
                <label class="form-label" for="developer">Add genre cover: <small>(16:9 aspect ratio preferred, jpg/png format only, max size 1mb)</small></label>
                <input class="form-control" type="file" name="image" accept=".jpg, .jpeg, .png" id="upload">
              </div>
              <button class="btn btn-primary mt-3" type="submit">Submit</button>
            </form>
        </div>
        </div>
      </div>
    </div>
  </body>
  <script>
    const upload = document.getElementById('upload');
  
    upload.addEventListener('change', (e) => {
      if (e.target.files[0].size > 1000000) {
        alert('Selected image is above 1mb. Please reduce the size or select a different image.');
        upload.value = '';
      }
    })
  </script>
</html>